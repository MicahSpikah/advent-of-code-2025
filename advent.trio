name: day2a
func
src:
  () => do
    hits: []
    ioReadStr(`io/in.txt`).split(",").each range => do
      start: range.split("-")[0].parseInt
      stop: range.split("-")[1].parseInt
      times(1 + stop - start) i => do
        str: (i + start).toStr
        half: str.size / 2
        if (str.size.remainder(2) == 0 and str[0..(half - 1)] == str[half..-1]) do
          hits = hits.add(i + start)
        end
      end
    end
    hits.fold(sum)
  end
